\n\
/* {{{relPath}}} */\n\
\n\
module.exports = {\n\
\n\
}");

      createJsFilesWithTemplate('config/', data, template);
    
    }
  },
  
  ext: {
    args: 99,
    validate: validateApp,
    run: function(data) {

      var template = handlebars.compile("\
\n\
/* {{{relPath}}} */\n\
\n\
var app = protos.app;\n\
\n\
// Code goes here\n");

      createJsFilesWithTemplate('ext/', data, template);
      
    }
  },
  
  include: {
    args: 99,
    validate: validateApp,
    run: function(data) {
      
      var template = handlebars.compile("\
\n\
/* {{{relPath}}} */\n\
